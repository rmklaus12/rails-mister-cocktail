<h2>Cocktail Details</h2>

  <h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail)  %>

<p><%= link_to "Back to List", {:action => 'index' }%></p>
